#homepage
  %section#rules
    .container
      .row
        .col-xs-12.col-md-4
          = link_to 'http://berlincodeofconduct.org/', class: 'grow center-block' do
            = image_tag 'ilu_attendees.svg', class: 'img-responsive center-block'
            .caption.text-center
              %h3 Rules for attendees

        .col-xs-12.col-md-4
          = link_to for_speakers_url, class: 'grow center-block' do
            = image_tag 'ilu_lecturers.svg', class: 'img-responsive center-block'
            .caption.text-center
              %h3 Rules for speakers

        .col-xs-12.col-md-4
          = link_to for_sponsors_url, class: 'grow center-block' do
            = image_tag 'ilu_sponsoring.svg', class: 'img-responsive center-block'
            .caption.text-center
              %h3 Rules for sponsors
  = render partial: 'elements/sponsors_list'

= render partial: 'elements/code_of_conduct'
