#homepage
  %section#rules
    .container
      .row
        .col-sm-6.col-md-4
          = image_tag 'ilu_attendees.svg', class: 'img-responsive center-block'
          .caption.text-center
            %h3 Rules for attendees

        .col-sm-6.col-md-4
          = image_tag 'ilu_lecturers.svg', class: 'img-responsive center-block'
          .caption.text-center
            %h3 Rules and resources for lecturers

        .col-sm-6.col-md-4
          = image_tag 'ilu_sponsoring.svg', class: 'img-responsive center-block'
          .caption.text-center
            %h3 Sponsoring rules

  %section#organizers
    .container
      .row
        .col-lg-12.text-left
          %h2.section-heading ORGANIZERS
      .row
        .col-sm-4
          .team-member
            = image_tag 'http://lorempicsum.com/simpsons/200/200/1', class: 'img-responsive img-circle center-block'
            .caption.text-center
              %h3 Sebastian B
              %p.text-muted Lorem ipsum dolor

        .col-sm-4
          .team-member
            = image_tag 'http://lorempicsum.com/simpsons/200/200/2', class: 'img-responsive img-circle center-block'
            .caption.text-center
              %h3 Maciej Mensfeld
              %p.text-muted Lorem ipsum dolor

        .col-sm-4
          .team-member
            = image_tag 'http://lorempicsum.com/simpsons/200/200/4', class: 'img-responsive img-circle center-block'
            .caption.text-center
              %h3 Krzysztof H
              %p.text-muted Lorem ipsum dolor

  %section#sponsors
    .container
      .row
        .col-lg-12.text-left
          %h2.section-heading SPONSORS
        .row
          %ul.list-inline
            - @sponsors.each do |sponsor|
              -  5.times do
                %li.sponsor-logo
                  = link_to sponsor.url, target: '_blank' do
                    = image_tag sponsor.logo, class: 'img-responsive center-block'

            %li.sponsor-logo= link_to 'SPONSOR US', for_sponsors_path, class: 'btn btn-primary'
