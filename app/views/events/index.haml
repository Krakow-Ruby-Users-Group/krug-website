%section#event-index
  .container
    .row
      .col-lg-12
        %ul.timeline
          - @events.each_with_index do |event, index|
            %li{ class: ('timeline-inverted' if index.even?) }
              .timeline-node
              .timeline-panel
                .timeline-heading
                  %h4= event.time
                  %h4.subheading= event.name
                .timeline-body
                  %h4= link_to 'read more & downloads', event_path(event)

    .row
      .col-xs-offset-4.col-xs-4.col-md-offset-5.col-md-3
        = paginate @events
