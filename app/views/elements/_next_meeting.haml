%section#next_meeting
  .container
    .row.vertical-align
      .col-sm-6
        %h2.section-heading NEXT MEETING
        %p.lead= "#{@next_meeting.time.strftime('%d.%m.%Y')} @ #{@next_meeting.venue}"
        %p.lead= @next_meeting.name
      .col-sm-6.text-center
        .button-image.center-block
          = link_to 'READ MORE', event_path(@next_meeting), class: 'btn btn-primary'
          = link_to 'MEETUP LINK', @next_meeting.link
