%section#offer-index
  .container
    .row
      .col-lg-12
        %ul.timeline
          - @offers.each_with_index do |offer, index|
            %li{ class: ('timeline-inverted' if index.even?) }
              %h4.subheading= offer.title
              %h4= link_to 'read more', offer_path(offer)

    .row
      .col-xs-offset-1.col-xs-10.col-sm-offset-4.col-sm-4
        = paginate @offers
